{
    "listeners": {
        "*:8080": {
            "pass": "routes/main"
        }
    },
    "routes": {
        "main": [
            {
                "action": {
                    "share": "/var/www/html/public/$uri",
                    "fallback": {
                        "pass": "applications/php-app"
                    }
                }
            }
        ]
    },
    "applications": {
        "php-app": {
            "type": "php",
            "user": "www-data",
            "group": "www-data",
            "root": "/var/www/html",
            "index": "index.php",
            "script": "public/index.php"
        }
    }
}
